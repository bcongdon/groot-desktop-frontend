<%- include('../_partials/header') -%>

<div id="edit-item-container">
  <div class="row">
    <% if ( errors.length > 0 ) { %>
        <div class="callout alert">
            <p><%= errors %></p>
        </div>
    <% } %>

    <h3>Editing Item</h3>
    <form method="post">
      <div class="field-group required">
        <label for="name" class="field-albe">Item Name</label>
        <div class="field">
          <input id="name" type="text" name="name" maxlength="16" value="<%= item.name %>" />
      </div>
      <div class="field-group required">
          <label for="price" class="field-label">Price</label>
          <div class="field">
              <input id="price" type="number" name="price" value="<%= item.price %>" />
          </div>
      </div>
      <div class="field-group required">
          <label for="quantity" class="field-label">Quantity</label>
          <div class="field">
              <input id="quantity" type="number" name="quantity" maxlength="32" value="<%= item.quantity %>" />
          </div>
      </div>
      <div class="field-group required">
          <label for="image_url" class="field-label">Image URL</label>
          <div class="field">
              <input id="image_url" type="text" name="image_url" value="<%= item.image %>" />
          </div>
      </div>
      <div class="controls">
          <button type="submit" class="button">Update Item</button>
      </div>
    </form>
  </div>
</div>

<%- include('../_partials/footer') -%>