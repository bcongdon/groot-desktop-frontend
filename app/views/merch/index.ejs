<%- include('../_partials/header') -%>
<div id="resume-container">
  <div class="row">
    <% if ( messages.length > 0 ) { %>
        <div class="callout secondary">
        <p><%= messages %></p>
        </div>
    <% } %>
    <% if ( errors.length > 0 ) { %>
        <div class="callout alert">
        <p><%= errors %></p>
        </div>
    <% } %>
    
    <h2>Corporate Manager</h2>
    <h3>Add New Item</h3>
    <form ref="uploadForm" method="post" action="/intranet/merch/items">
      <div class="field-group required">
        <label for="item_name" class="field-albe">Item Name </label>
        <div class="field">
          <input id="item_name" type="text" name="item_name" maxlength="16" />
      </div>
      <div class="field-group required">
          <label for="price" class="field-label">Price</label>
          <div class="field">
              <input id="price" type="number" name="price"  />
          </div>
      </div>
      <div class="field-group required">
          <label for="quantity" class="field-label">Quantity</label>
          <div class="field">
              <input id="quantity" type="number" name="quantity" maxlength="32" />
          </div>
      </div>
      <div class="field-group required">
          <label for="item_image" class="field-label">Image URL</label>
          <div class="field">
              <input id="item_image" type="text" name="item_image" />
          </div>
      </div>
      <div class="controls">
          <button type="submit" class="button">Add Item</button>
      </div>
    </form>
  </div>
</div>

<%- include('../_partials/footer') -%>